                </DataTrigger>
                <DataTrigger Binding="{Binding Slot5.Value.AirCraft.Type}" Value="{x:Static model:Consts.ReconnaissanceSeaplane}">
                    <Setter Property="Foreground" Value="LightGreen" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Slot5.Value.AirCraft.Type}" Value="{x:Static model:Consts.SeaplaneBomber}">
